{
  "hosting": {
    "public":  "public/react-refactor/sail-it/dist",
    "ignore": [
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/exercise.html",
        "destination": "/exercise",
        "type": 301
      },
      {
        "source": "/elementos-del-barco.html",
        "destination": "/elementos-del-barco",
        "type": 301
      },
      {
        "source": "/index.html",
        "destination": "/",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate, max-age=0"
          },
          {
            "key": "Pragma",
            "value": "no-cache"
          }
        ]
      }
    ]
  }
} 